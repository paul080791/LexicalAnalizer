program circle;
var
	{Ilegal operand for sign operator}
	r, a, p, b : real; 
	str: string := 'Hello World!';
	st : string;		
begin
	r := 8;
	p := 0;
	a := 0;
	st := -str;
	if r > 5 then
	  a := (3.14) * r * r;
	if (a < 100) then
	    p := 2 * 3.14 * b; 
	{Display the results}
	writeln ( 'The output results are ' , r, p, b);
end.  
