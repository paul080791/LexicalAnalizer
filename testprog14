program circle;
var
	{Clean program testing if statement then-clause}
	r, a, p, b : real; 
	flag : boolean := true;
	i, j : integer := 0;
	str : string := 'End of Program';	
begin
	r := 6;
	p := 0;
	a := 5;
	
	if (a > 0 and a < 100) then
	begin
		b := 25;
	    p := 2 * 3.14 * r 
	end
	else
	begin
	    p := -1;
	    flag := false
	end;
	{Display the results}
	write ( 'The result of a = ' , a, ', ');
	writeln('The result of p = ' , p);
	writeln(str)
end.
