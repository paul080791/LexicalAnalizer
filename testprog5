program circle;
var
	{Illegal expression type for If statement condition}
	r, a, p, b : real; 
	i, j : integer;	
begin
	r := 8;
	p := 0;
	a := 0;
	j := -1;
	if r then
	  a := (3.14) * r * r;
	if (a < 100) then
	    p := 2 $ 3.14 * b; 
	{Display the results}
	writeln ( 'The output results are ' , r, p, b;
